[core]
editor = nvim
pager = delta

[color]
ui = auto

[alias]
a = add
b = branch
ba = branch -a
ci = commit -s
co = checkout
d = diff
g = grep
l = log --date=short --pretty=format:'%C(yellow)%h %Cgreen%cd %Cblue%cn %Creset%s'
ll = log --stat --decorate=short --pretty=format:'%C(yellow)%h %Cgreen%cr %Cblue%cn%Cred%d %Creset%s %C(cyan)%b'
lg = log --graph --date=short --decorate=short --pretty=format:'%C(yellow)%h %Cgreen%cd %Cblue%cn%Cred%d %Creset%s'
lm = log --merges --pretty=format:'%C(yellow)%h %Cgreen%ci %Cblue%cn%Cred%d %Creset%s %C(cyan)%b'
mg = merge
pl = pull
pr = pull-request
ps = push
r = remote
rs = reset
st = status
sw = "!f() { if [[ $# -ge 1 ]] ; then git switch $@; else git switch $(git for-each-ref --format='%(refname:short)' refs/heads/ | fzf); fi }; f"
undo = "!f() { \\\n    git reset --hard $(git rev-parse --abbrev-ref HEAD)@{${1-1}}; \\\n}; f"
alias = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\\t => \\2/' | sort

[pager]
diff = delta --color-only --syntax-theme Nord
show = delta --color-only --syntax-theme Nord

[delta]
line-numbers = true
navigate = true
light = false

[init]
templatedir = ~/.config/git/templates
defaultBranch = main

[commit]
gpgsign = true

[interactive]
diffFilter = delta --color-only --syntax-theme Nord

[add.interactive]
useBuiltin = false

[ghq]
root = ~/src

[credential]
helper = osxkeychain

[http]
cookiefile = ~/.gitcookies

[filter "lfs"]
clean = git-lfs clean -- %f
smudge = git-lfs smudge -- %f
process = git-lfs filter-process
required = true

[merge]
tool = vimdiff
conflictstyle = diff3

[mergetool]
prompt = false

[mergetool "vimdiff"]
cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[difftool]
prompt = false

[diff]
tool = vimdiff
colorMoved = default

[submodule]
recurse = true

[pull]
ff = only
rebase = false

[gpg]
program = /etc/profiles/per-user/micnncim/bin/gpg

[push]
